{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "*.vite.config.ts",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "rollup-plugin-vue-esm.ts",
    "vite.config.*",
    "vitest.config.*",
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node"
    ]
  }
}
